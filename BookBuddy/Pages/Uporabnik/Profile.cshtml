@page
@model BookBuddy.Pages.Uporabnik.ProfileModel

<div class="container mt-4">
    <h2>Urejanje profila</h2>

    <form method="post">
        <div class="mb-3">
            <label>Ime</label>
            <input asp-for="Ime" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Priimek</label>
            <input asp-for="Priimek" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Najljubša zvrst</label>
            <input asp-for="NajljubsaZvrst" class="form-control" />
        </div>

        <button class="btn btn-primary">Shrani</button>
    </form>

    @if (Model.Sporocilo != null)
    {
        <p class="text-success mt-3">@Model.Sporocilo</p>
    }
</div>
