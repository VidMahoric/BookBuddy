@page
@model BookBuddy.Pages.Books.RateModel

<div class="container mt-4">
    <h2>Oceni knjigo</h2>

    <form method="post">
        <!-- skriti ID knjige -->
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label>Ocena (1–5)</label>
            <input asp-for="Ocena" class="form-control" type="number" min="1" max="5" />
        </div>

        <button class="btn btn-primary">Shrani oceno</button>
    </form>

    @if (Model.Sporocilo != null)
    {
        <p class="text-danger mt-3">@Model.Sporocilo</p>
    }
</div>
