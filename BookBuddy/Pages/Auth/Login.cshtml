@page
@model BookBuddy.Pages.Auth.LoginModel

<div class="container mt-4">
    <h2>Prijava</h2>

    <form method="post">
        <div class="mb-3">
            <label>Uporabniško ime</label>
            <input asp-for="UporabniskoIme" class="form-control" />
        </div>

        <div class="mb-3">
            <label>Geslo</label>
            <input asp-for="Geslo" type="password" class="form-control" />
        </div>

        <button class="btn btn-primary">Prijava</button>
    </form>

    @if (Model.Sporocilo != null)
    {
        <p class="mt-3">@Model.Sporocilo</p>
    }
</div>
